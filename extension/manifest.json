{
  "manifest_version": 3,
  "name": "readoku",
  "version": "0.1.0",
  "description": "Translate English text to Japanese on hover.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "popup.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "dictionary.json"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "action": {}
} 